<!DOCTYPE html>
<html>

<head>
  <title>Key Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>License Key Management</h2>
      <form action="/admin/generate" method="POST" class="d-flex gap-2">
        <input type="number" name="count" class="form-control" value="1" min="1" max="50" style="width: 80px;">
        <button type="submit" class="btn btn-primary">Sinh Key Mới</button>
      </form>
    </div>

    <div class="card shadow">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-dark">
            <tr>
              <th>Key</th>
              <th>Trạng thái</th>
              <th>Hardware ID (HWID)</th>
              <th>Hành động</th>
            </tr>
          </thead>
          <tbody>
            <% keys.forEach(k=> { %>
              <tr>
                <td class="fw-bold text-primary">
                  <%= k.key %>
                </td>
                <td>
                  <span class="badge bg-<%= k.isUsed ? 'danger' : 'success' %>">
                    <%= k.isUsed ? 'Đã dùng' : 'Sẵn sàng' %>
                  </span>
                </td>
                <td class="text-muted small">
                  <%= k.hwid || '---' %>
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <form action="/admin/reset/<%= k._id %>" method="POST">
                      <button class="btn btn-sm btn-warning">Reset</button>
                    </form>
                    <form action="/admin/delete/<%= k._id %>" method="POST"
                      onsubmit="return confirm('Xóa thật không?')">
                      <button class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>